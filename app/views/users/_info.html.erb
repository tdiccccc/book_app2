  <%= image_tag user.get_profile_image(63,63) %>
  <table class = "table">
    <tbody>
      <tr></tr>
      <tr>
        <th>name</th>
        <th><%= user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= user.introduction %></th>
      </tr>
    </tbody>
  </table>
  <div class='row'>
    <%# if current_user != user %>
    <td><%= render "relationships/btn", user: user %></td>
    <%# else %>
    <td>
      <% if current_user != @user %>
        <%= link_to 'Begin Chat', chat_path(@user.id) %>
      <% end %>
    </td>
    <%= link_to  edit_user_path(user), class: "btn btn-outline-secondary btn-block" do %>
    <i class="fas fa-user-cog"></i>
    <%end%>
  </div>
